@{
    ViewData["Title"] = "Contato";
    ecommerce_aspnet.Models.Contact contact = (ecommerce_aspnet.Models.Contact)ViewData["CONTACT"];
}

<main role="main">
    <br />
    <br />
    <div class="container">
        <div class="row">
            <aside class="col-md-6">
                <h4 class="subtitle-doc">Nossos contatos</h4>
                <div id="code_desc_simple">
                    <div class="box">
                        <dl>
                            <dt>Devolução/Garantia: </dt>
                            <dd>devolucao@lojavirtual.com.br</dd>
                        </dl>
                        <dl>
                            <dt>Televendas: </dt>
                            <dd>(81) 9999-9999</dd>
                        </dl>
                        <dl>
                            <dt>SAC:</dt>
                            <dd>sac@lojavirtual.com.br</dd>
                        </dl>
                    </div> <!-- box.// -->
                </div> <!-- code-wrap.// -->
            </aside>
            <aside class="col-sm-6">

                <h4 class="subtitle-doc">Envie-nos uma mensagem</h4>
                <div>

                    <article class="card">
                        <div class="card-body p-5">
                            @if(ViewData["MSG_S"] != null) {
                                <p class="alert alert-success">@ViewData["MSG_S"]</p>
                            }

                            @if(ViewData["MSG_E"] != null) {
                                <p class="alert alert-danger">@Html.Raw(ViewData["MSG_E"])</p>
                            }
                            
                            <form role="formContact" method="post" action="/Home/ContactAction">
                                <div class="form-group">
                                    <label for="name">Nome</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-user"></i></span>
                                        </div>
                                        <input id="name" type="text" class="form-control" name="name" placeholder="Nome"
                                            required="" value="@(contact != null ? contact.Name : "")">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="email">E-mail</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-at"></i></span>
                                        </div>
                                        <input id="email" type="text" class="form-control" name="email" placeholder="E-mail"
                                            value="@(contact != null ? contact.Email : "")">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label for="message"><span class="hidden-xs">Mensagem</span> </label>
                                            <div class="form-inline">
                                                <textarea id="message" name="message" class="form-control" style="width:100%">@(contact != null ? contact.Message : "")</textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <button class="subscribe btn btn-primary btn-block" type="submit"> Enviar </button>
                            </form>
                        </div>
                    </article>

                </div> 

            </aside>
        </div>
    </div>
</main>